rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // دوال مساعدة (Helper Functions)
    // ============================================
    
    // التحقق من أن المستخدم هو أدمن
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // التحقق من أن المستخدم يملك المورد
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // التحقق من أن المستخدم مسجل دخول
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // ============================================
    // مجموعة المستخدمين (Users Collection)
    // ============================================
    
    match /users/{userId} {
      // المستخدم يمكنه قراءة بياناته الخاصة، والأدمن يمكنه قراءة جميع البيانات
      allow read: if isOwner(userId) || isAdmin();
      
      // المستخدم يمكنه كتابة بياناته الخاصة، والأدمن يمكنه كتابة جميع البيانات
      allow write: if isOwner(userId) || isAdmin();
      
      // ============================================
      // طلبات المستخدم (User's Orders)
      // ============================================
      match /orders/{orderId} {
        // المستخدم يمكنه قراءة وكتابة طلباته الخاصة فقط
        allow read, write: if isOwner(userId);
      }
      
      // ============================================
      // عناصر السلة (Cart Items)
      // ============================================
      match /cartItems/{itemId} {
        // المستخدم يمكنه قراءة وكتابة عناصر سلته الخاصة فقط
        allow read, write: if isOwner(userId);
      }
      
      // ============================================
      // المفضلة (Favorites)
      // ============================================
      match /favorites/{favoriteId} {
        // المستخدم يمكنه قراءة وكتابة مفضلته الخاصة فقط
        allow read, write: if isOwner(userId);
      }
    }
    
    // ============================================
    // مجموعة الطلبات العامة (Global Orders Collection)
    // ============================================
    
    match /orders/{orderId} {
      // فقط الأدمن يمكنه قراءة جميع الطلبات
      allow read: if isAdmin();
      
      // المستخدمون يمكنهم إنشاء طلبات جديدة (مع التأكد من أن userId مطابق)
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid;
      
      // فقط الأدمن يمكنه تحديث أو حذف الطلبات
      allow update, delete: if isAdmin();
    }
    
    // ============================================
    // مجموعة المنتجات (Products Collection)
    // ============================================
    
    match /products/{productId} {
      // جميع المستخدمين المسجلين يمكنهم قراءة المنتجات
      allow read: if isAuthenticated();
      
      // فقط الأدمن يمكنه إنشاء، تحديث، أو حذف المنتجات
      allow create, update, delete: if isAdmin();
    }
  }
}
